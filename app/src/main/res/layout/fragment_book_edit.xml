<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookEditFragment">
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_button_editPage_book_complete"
            android:src="@drawable/ic_complete"
            app:rippleColor="@color/black"
            android:backgroundTint="@color/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <!--series-->
            <LinearLayout
                android:id="@+id/editPage_book_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_series_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="系列标志"/>
                <EditText
                    android:id="@+id/editPage_book_series_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="True or False"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>

            <!--name-->
            <LinearLayout
                android:id="@+id/editPage_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_name_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="名称"/>
                <EditText
                    android:id="@+id/editPage_book_name_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入名称"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>

            <!--year-->
            <LinearLayout
                android:id="@+id/editPage_book_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_year_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="年份"/>
                <EditText
                    android:id="@+id/editPage_book_year_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入年份"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--status-->
            <LinearLayout
                android:id="@+id/editPage_book_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_status_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="连载状态"/>
                <EditText
                    android:id="@+id/editPage_book_status_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入连载状态"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--logo-->
            <LinearLayout
                android:id="@+id/editPage_book_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_logo_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="封面"/>
                <EditText
                    android:id="@+id/editPage_book_logo_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入封面链接"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--author-->
            <LinearLayout
                android:id="@+id/editPage_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_author_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="作者"/>
                <EditText
                    android:id="@+id/editPage_book_author_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入作者"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--localFlag-->
            <LinearLayout
                android:id="@+id/editPage_book_localFlag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_localFlag_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="本地标志"/>
                <EditText
                    android:id="@+id/editPage_book_localFlag_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="True or False"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--localUrl-->
            <LinearLayout
                android:id="@+id/editPage_book_localUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_localUrl_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="本地地址"/>
                <EditText
                    android:id="@+id/editPage_book_localUrl_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="输入本地地址"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>

            <!--remoteFlag-->
            <LinearLayout
                android:id="@+id/editPage_book_remoteFlag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_remoteFlag_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="远程标志"/>
                <EditText
                    android:id="@+id/editPage_book_remoteFlag_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="True or False"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--remoteUrl-->
            <LinearLayout
                android:id="@+id/editPage_book_remoteUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_remoteUrl_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="远程地址"/>
                <EditText
                    android:id="@+id/editPage_book_remoteUrl_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:hint="输入远程地址"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--container-->
            <LinearLayout
                android:id="@+id/editPage_book_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_container_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="容器格式"/>
                <EditText
                    android:id="@+id/editPage_book_container_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入容器格式"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>


            <!--remark-->
            <LinearLayout
                android:id="@+id/editPage_book_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/editPage_book_remark_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="备注"/>
                <EditText
                    android:id="@+id/editPage_book_remark_edit"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="输入备注"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:autofillHints="" />
            </LinearLayout>
            
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</ScrollView>