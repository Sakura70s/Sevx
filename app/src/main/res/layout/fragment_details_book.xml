<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DetailsBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/details_book_logo"
            android:layout_width="175dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/video_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/details_book_logo"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_book_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:textAlignment="gravity"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/details_book_author"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/details_book_status"
                android:layout_width="match_parent"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/details_book_update_time"
                android:layout_width="match_parent"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/details_book_series"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/details_book_url_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <!--        标志-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--            本地标志-->
            <TextView
                android:id="@+id/details_book_local_flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <!--            远程标志-->
            <TextView
                android:id="@+id/details_book_remote_flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/details_book_local_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/details_book_remote_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/details_book_remark"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>